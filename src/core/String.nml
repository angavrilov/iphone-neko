
function make(size : int, c : char) : string {
	neko("
		var s = $smake(size);
		var i = 0;
		while( i < size ) {
			$sset(s,i,c);
			i = i + 1;
		}
		s
	");
}

var create : int -> string = neko("$smake");
var length : string -> int = neko("$ssize");
var get : string -> int -> char = neko("$sget");
var set : string -> int -> char -> void = neko("$sset");
var blit : string -> int -> string -> int -> int -> void = neko("$sblit");
var sub : string -> int -> int -> string = neko("$ssub");

